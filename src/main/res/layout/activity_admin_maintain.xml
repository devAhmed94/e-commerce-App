<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    tools:context=".admin.AdminMaintainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/maintain_imageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            />
        <EditText
            android:id="@+id/maintain_et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_imageView"
            android:background="@drawable/input_shape"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:hint="Name ..."
            android:textSize="30sp"
           android:paddingStart="30dp"
            android:paddingEnd="30dp"
            />
        <EditText
            android:id="@+id/maintain_et_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_et_name"
            android:background="@drawable/input_shape"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:hint="Price ..."
            android:textSize="30sp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            />
        <EditText
            android:id="@+id/maintain_et_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_et_price"
            android:background="@drawable/input_shape"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:hint="Description ..."
            android:textSize="30sp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
             />
        <Button
            android:id="@+id/maintain_btn_apply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_et_description"
            android:background="@drawable/btn_shape"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:text="Apply Changes"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/maintain_btn_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_below="@id/maintain_btn_apply"
            android:background="@drawable/btn_shape"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:text="delete"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            />

    </RelativeLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>