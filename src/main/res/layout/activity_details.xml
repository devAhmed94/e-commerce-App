<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".DetailsActivity"
            >
            <ImageView
                android:id="@+id/details_iv_imageProduct"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
            />
            <TextView
                android:id="@+id/details_tv_nameProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/product_name"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/details_iv_imageProduct"
                />
            <TextView
                android:id="@+id/details_tv_priceProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/product_price"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/details_tv_nameProduct"
                />
            <TextView
                android:id="@+id/details_tv_desProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/product_description"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/details_tv_priceProduct"
                />

            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:id="@+id/details_eBtn_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:textSize="16sp"
                app:initialNumber="1"
                app:finalNumber="10"
               android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/details_tv_desProduct"
                />
           <Button
               android:id="@+id/details_btn_addToCart"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/btn_shape"
               android:text="@string/add_to_cart"
               android:textColor="@color/white"
               android:layout_below="@+id/details_eBtn_counter"
               android:layout_marginHorizontal="30dp"
               android:layout_marginTop="100dp"
               android:layout_marginBottom="80dp"
               />

        </RelativeLayout>
</ScrollView>