<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".buyers.SettingActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/setting_appbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        >

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/setting_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/close"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"

                    />

                <TextView
                    android:id="@+id/setting_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/update"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginEnd="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"

                    />
             </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setting_iv_imageProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/setting_appbar"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/setting_tv_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/change_profile"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@+id/setting_iv_imageProfile"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/setting_et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:layout_below="@+id/setting_tv_change"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:id="@+id/setting_et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:layout_below="@+id/setting_et_phone"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:id="@+id/setting_et_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:layout_below="@+id/setting_et_name"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        />
    <Button
        android:id="@+id/setting_btn_setSecurity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/set_security_questions"
        android:textAllCaps="false"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/setting_et_address"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        />


</RelativeLayout>