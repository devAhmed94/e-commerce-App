<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp"
    android:layout_marginHorizontal="30dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/seller_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/product_name"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_marginVertical="10dp"
            />
        <TextView
            android:id="@+id/seller_item_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/product_name"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_marginVertical="10dp"
            android:layout_below="@+id/seller_item_name"
            />
        <ImageView
            android:id="@+id/seller_item_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_below="@+id/seller_item_status"

            />
        <LinearLayout
            android:id="@+id/seller_item_linear_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_below="@+id/seller_item_image"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/seller_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                android:text="@string/product_price"
                android:textColor="@color/colorPrimary"

                 />
            <TextView
                android:id="@+id/doller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/seller_item_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@string/product_description"
            android:textColor="@color/colorPrimary"
            android:layout_marginVertical="5dp"
            android:layout_below="@+id/seller_item_linear_price"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>